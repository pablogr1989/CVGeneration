{
  "name": "cv-generator",
  "version": "1.0.0",
  "type": "module",
  "description": "Generador de CV de Markdown a PDF de alta fidelidad con Interfaz Electron",
  "main": "dist/main.js",
  "author": "Pablo Gómez Ramírez",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "generate": "node dist/index.js",
    "start": "electron .",
    "electron:dev": "tsc && electron .",
    "install-runtime": "set PLAYWRIGHT_BROWSERS_PATH=bin/playwright && npx playwright install chromium",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "playwright": "^1.41.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^1.5.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.pablogr.cvgenerator",
    "productName": "CV Generation",
    "copyright": "Copyright © 2026 Pablo Gómez Ramírez",
    "directories": {
      "output": "dist-installer",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "package.json"
    ],
    "extraResources": [
      { "from": "templates", "to": "templates", "filter": ["**/*"] },
      { "from": "data", "to": "data", "filter": ["**/*"] },
      { "from": "assets", "to": "assets", "filter": ["**/*"] },
      { "from": "bin", "to": "bin", "filter": ["**/*"] }
    ],
    "win": {
      "target": ["nsis"],
      "executableName": "cv-generation"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "CV Generation",
      "artifactName": "CV-instalador.${ext}"
    },
    "asar": true
  }
}